// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

generator zod {
  provider = "zod-prisma-types"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model User {
  id String @id @default(uuid())
}

model Streamer {
  id          String  @id @default(uuid())
  name        String  @unique
  description String?

  Upvote   Upvote[]
  Downvote Downvote[]
  Platform Platform[]
}

model Platform {
  id          String   @id @default(uuid())
  type        String   @unique
  streamer_id String
  streamer    Streamer @relation(fields: [streamer_id], references: [id])
}

model Upvote {
  id          String   @id @default(uuid())
  user_id     String
  streamer_id String
  streamer    Streamer @relation(fields: [streamer_id], references: [id])
}

model Downvote {
  id          String   @id @default(uuid())
  user_id     String
  streamer_id String
  streamer    Streamer @relation(fields: [streamer_id], references: [id])
}
